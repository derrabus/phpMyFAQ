{
    "name":        "thorsten/phpMyFAQ",
    "description": "FAQ System",
    "keywords":    [ "phpMyFAQ", "FAQ" ],
    "homepage":    "http://www.phpmyfaq.de",
    "license":     "MPL 2.0",
    "type":        "application",
    "authors": [
        {
            "name":  "Thorsten Rinne",
            "email": "thorsten@phpmyfaq.de"
        }
    ],
    "repositories": [
        {
            "type": "package",
            "package": {
                "name":    "phpseclib",
                "version": "master",
                "source": {
                    "url":       "https://github.com/phpseclib/phpseclib.git",
                    "type":      "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name":    "tcpdf",
                "version": "master",
                "source": {
                    "url":       "http://git.code.sf.net/p/tcpdf/code",
                    "type":      "git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name":    "twitteroauth",
                "version": "master",
                "source": {
                    "url":       "https://github.com/thorsten/twitteroauth.git",
                    "type":      "git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php":                     ">=5.4.4",
        "symfony/class-loader":    ">=2.3",
        "symfony/http-foundation": ">=2.3",
        "twig/twig":               "*",
        "phpseclib":               "master@dev",
        "tcpdf":                   "master@dev",
        "twitteroauth":            "master@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "phpunit/dbunit":  "*"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-0": {"PMF\\": "phpmyfaq/inc/"}
    },
    "scripts": {
        "post-install-cmd": [
            "scripts/moveVendors.sh"
        ],
        "post-update-cmd": [
            "scripts/moveVendors.sh"
        ]
    }
}
